@model IEnumerable<XYZStore.Models.Models.Product>

<div class="text-center">
    <h1 class="display-4"><------WELCOME------></h1>
</div>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-2 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px solid #008cbb; border-radius: 5px;">
                    <div class="card">
                        <img src="@product.ImageUrl" class="card-img-top rounded" />

                        <div class="card-body">
                            <div class"pl-1">
                                <p class="card-title h5 text-primary">@product.Title</p>
                                <b>Director</b>
                                <p class="card-title text-secondary"><b>@product.Director</b></p>
                            </div>
                            <div class="pl-1">
                                <p>Old Price: <strike><b>$@product.ListPrice.ToString("0.00")</b></strike></p>
                            </div>
                            <div class="pl-1">
                                <p>Price:<b>$@product.Price.ToString()</b></p>
                            </div>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-primary form-control" asp-route-productId="@product.Id">
                            Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


